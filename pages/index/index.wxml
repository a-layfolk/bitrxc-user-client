<view class="bit-index">

  <!-- 轮播图 -->
  <view class="index-swiper">

    <!-- swipter 标签-->
    <swiper 
      autoplay 
      indicator-dots
      indicator-active-color="rgba(44, 151, 75, 0.8)" 
      circular
    >
      <swiper-item
        wx:for="{{swiperList}}"
        wx:key="img_id"
      >
        <navigator>
          <image mode="widthFix" src="{{item.img_src}}"/>
        </navigator>
      </swiper-item>
      
  </swiper>
  </view>
  
</view>